<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Cutwatch" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimaryVariant">@color/primary_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:background">@color/primary_color</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="WatchCardDefault">
        <item name="cardBackgroundColor">@color/lighter_gray</item>
        <item name="android:layout_marginEnd">@dimen/margin_default</item>
        <item name="android:layout_marginStart">@dimen/margin_default</item>
        <item name="android:layout_marginBottom">@dimen/margin_half</item>
        <item name="android:layout_marginTop">@dimen/margin_half</item>
        <item name="contentPaddingTop">0dp</item>
        <item name="cardElevation">@dimen/watch_card_elevation</item>
    </style>

    <style name="WatchCardImagem">
        <item name="android:layout_marginStart">@dimen/margin_default</item>
        <item name="android:layout_marginEnd">@dimen/margin_default</item>
        <item name="android:layout_marginTop">@dimen/margin_quarter</item>
        <item name="android:textColor">@color/secondary_blue</item>
        <item name="android:textSize">@dimen/smaller_text_size</item>

    </style>

    <style name="ButtonIcon" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minWidth">@dimen/button_icon_size</item>
        <item name="android:minHeight">@dimen/button_icon_size</item>
    </style>

    <style name="WatchCardCortantea" parent="WatchCardAboveCortanteText">
        <item name="android:layout_marginStart">@dimen/margin_default</item>
    </style>

    <style name="WatchCardProvider" parent="WatchCardAboveCortanteText">
        <item name="android:layout_marginEnd">@dimen/margin_default</item>
    </style>

    <style name="WatchCardAboveCortanteText">
        <item name="android:layout_marginTop">@dimen/margin_half</item>
        <item name="android:textColor">@color/black</item>

        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/title_size</item>
    </style>

    <style name="TitleDefault">
        <item name="android:layout_marginTop">@dimen/margin_double</item>
        <item name="android:layout_marginBottom">@dimen/margin_default</item>
        <item name="android:layout_marginStart">@dimen/margin_default</item>
        <item name="android:layout_marginEnd">@dimen/margin_default</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/title_size</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="SubtitleDefault" parent="TitleDefault">
        <item name="android:textSize">@dimen/subtitle_size</item>
    </style>

    <style name="ImagemTvSubtitle" parent="SubtitleDefault">
        <item name="android:textAlignment">viewStart</item>
        <item name="fontWeight">100</item>
    </style>
</resources>